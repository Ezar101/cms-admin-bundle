<div class="col-md-12">
    <h3 class="text-center">{{title}}</h3>
    
    {% for type, slug in types %}
        <h4>{{type}}</h4>
        
        <div class="row">
        {% for element in elements if type in element.types %}
            <div class="col-md-4 bg-light">
                <div class="">
                <strong>{{element.title}}</strong>
                {% if element.image %}<img class="img-responsive" src="{{element.image}}">{% endif %}
                <p>{{element.description}}</p>
                </div>
            </div>
        {% endfor %}
        </div>
    {% endfor %}
</div>