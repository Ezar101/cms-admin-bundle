<div class="col-md-12">
    <h3 class="mn mb15 text-center"><i class="fa fa-link"></i> Add/Edit a link</h3>

    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label for="link-text">Link text</label>
                <input type="text" placeholder="Link text" id="link-text" class="form-control">
            </div>
            <div class="form-group">
                <label for="link-url">Address</label>
                <input type="text" placeholder="http://" id="link-url" class="form-control">
            </div>
            <div class="form-group">
                <label for="link-title">Title</label>
                <input type="text" placeholder="Title on hover" id="link-title" class="form-control">
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="link-class">Class CSS</label>
                <input type="text" placeholder="" id="link-class" class="form-control">
            </div>
            <div class="form-group">
                <label for="link-id">ID</label>
                <input type="text" placeholder="" id="link-id" class="form-control">
            </div>
            <div class="form-group">
                <label for="link-target">Opening</label>
                <select class="form-control" id="link-target">
                    <option value="">Current window</option>
                    <option value="_blank">New window</option>
                </select>
            </div>
        </div>
        <div class="col-md-12 mb25">
            <button class="btn btn-sm btn-info pull-right ml10" id="add-link" type="submit">Add</button>
            <button class="btn btn-sm btn-default pull-right" id="cancel-link" type="submit">Cancel</button>
        </div>
    </div>

    {% include 'KalamuCmsAdminBundle:LinkPicker:base.html.twig' %}
</div>
<script type="text/javascript">
$(function(){
    $(window).on('select_link', function(e, item){
        $('#link-title, #link-text').val(item.title);
        $('#link-url').val(item.url);
    });
});
</script>