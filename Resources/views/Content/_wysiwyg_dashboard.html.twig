
<th>Contenu</th>
<td>
    <section class="container">
        <div class="row">
            <div class="col-md-12">

            {% set datas = object.contenu|json_decode %}
            {% set widget_controller = widget_controller is defined ? widget_controller : 'RohoDashboardBundle:API/WidgetApi:render' %}
            {% for child in datas.childs %}
                {% if child.type == 'row' %}
                    {%set row = child.datas %}
                    <div {% if row.responsive.id is defined %}id="{{row.responsive.id}}" {% endif %} class="row {% for size in row.responsive.visible %}visible-{{size}} {% endfor %}">
                        {% for col in row.cols %}
                            <div class="pi-col-sm-{{col.md}}">
                                {% for widget in col.widgets %}
                                    {{ render(controller('KalamuDashboardBundle:ElementApi:render', {
                                        context: 'cms',
                                        type: widget.type,
                                        name: widget.identifier,
                                        form: widget.params,
                                        format: 'html'}))
                                    }}
                                {% endfor %}
                            </div>
                        {% endfor %}
                    </div>
                {% elseif child.type == 'section' %}
                    {{ render(controller('KalamuDashboardBundle:ElementApi:render', {
                        context: 'cms',
                        type: child.datas.type,
                        name: child.datas.identifier,
                        form: child.datas.params,
                        additional: {
                            _content: (child.datas._content is defined ? child.datas._content : null),
                            _responsive: (child.datas.responsive is defined ? child.datas.responsive : null)
                        },
                        format: 'html'}))
                    }}
                {% endif %}
            {% endfor %}

            </div>
        </div>
    </section>
</td>
